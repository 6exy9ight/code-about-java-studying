import java.util.Scanner;

public class Demo2 {
	public static void main(String[] args){
		Scanner sc=new Scanner(System.in);
		int sum=0;
		for(int i=1; i<=10; i++){
		//also could input "System.out.println(i);" to print
			System.out.println("input the" +i+"th number");
			int num=sc.nextInt();
			if(num==0){break;}
			if(i%2==0){sum++;
			}
			
		
		}
		System.out.println(sum);
		
		
	}

}
